.row-fluid
  .span2
    -view(it, "entity-nav")
  .span10
    -view(it, "sections")

:coffeescript
  w = window
  d = document
  e = d.documentElement
  g = d.getElementsByTagName('body')[0]
  x = w.innerWidth || e.clientWidth || g.clientWidth
  y = g.clientHeight

  $(".enavtree").css("height", ''+y+'px')
  $(".sections").css("height", ''+y+'px')
